apiVersion: v1
kind: ConfigMap
metadata:
  name: metrics-config-{{ sg_label }}
data:
  sa.metrics.config.json: |+
    {
            "AMQP1MetricURL": "messaging-internal-{{ sg_label }}.{{ namespace }}.svc:5672/collectd/telemetry",
            "Exporterhost": "0.0.0.0",
            "Exporterport": 8081,
            "CPUStats": false,
            "DataCount": -1,
            "UseSample": false,
            "ServiceType": "metrics",
            "Debug": false,
            "Prefetch": 1000
    }
