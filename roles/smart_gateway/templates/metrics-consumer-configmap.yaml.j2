apiVersion: v1
kind: ConfigMap
metadata:
  name: metrics-config-{{ item.name }}
data:
  sa.metrics.config.json: |+
    {
            "AMQP1MetricURL": "messaging-internal-{{ item.name }}.{{ sa_telemetry_consumers_namespace }}.svc:5672/collectd/telemetry",
            "Exporterhost": "0.0.0.0",
            "Exporterport": 8081,
            "CPUStats": false,
            "DataCount": -1,
            "UseSample": false,
            "ServiceType": "metrics",
            "Debug": true,
            "Prefetch": 1000
    }
